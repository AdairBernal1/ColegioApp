@model ColegioApp.Models.Alumno
@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Eliminar Alumno";
}

<p class="text-danger">@ViewData["ErrorMessage"]</p>


<h2>Eliminar Alumno</h2>

<h3>Estas seguro de eliminar a este Alumno?</h3>
<div>
    <h4>Detalles del Alumno</h4>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Alumno", new { id = Model.Id }, FormMethod.Post))
    {
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "AlumnoIndex", null, new { @class = "btn btn-default" })
    }

</div>


