@model ColegioApp.Models.Profesor
@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Eliminar Profesor";
}

<h2>Eliminar Profesor</h2>

<h3>¿Estás seguro de eliminar este Profesor?</h3>
<div>
    <h4>Detalles del Profesor</h4>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Profesor", new { id = Model.Id }, FormMethod.Post))
    {
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "ProfesorIndex", null, new { @class = "btn btn-default" })
    }
</div>
